@{int addamount = 2;}
@foreach (var item in Model.Item1.Take(addamount))
{
    <div class="category ">
        <h2>@Html.DisplayFor(ModelItem => item.CategoryName)</h2><hr class="hr-category" />

        <h4>@Html.DisplayFor(ModelItem => item.CategoryDescription)</h4>


        <div class="row">
            <div class="container">
                @{int addamount1 = 4;}
                @foreach (var subItem in item.jobs.Take(addamount1))
                {
                    if (item.jobs != null)
                    {

                        <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-6  col-lg-3 cat_dt">
                            <div class="item-cat">
                                <div>
                                    <img src="~/Uploads/@subItem.JobImage" class="img-responsive img_category thumbnail" />

                                </div>
                                <div style="height:160px">
                                    <h5> <span>Job Tittle :</span> @Html.DisplayFor(ModelItem => subItem.JobTittle)</h5>
                                    <h5> <span>Serch For :</span> @Html.DisplayFor(ModelItem => subItem.JobContent)</h5>
                                    <h5> <span>Job Publisher :</span> @Html.DisplayFor(ModelItem => subItem.User.UserName)</h5>
                                    <a href="@Url.Action("Details", "Home", new { jobId = subItem.id })" class="btn btn-danger btn-category">Details</a>
                                </div>
                            </div>
                        </div>

                    }

                }
                <a class="btn btn-danger show-btn" href="~/Categories/AllViewData"> show More</a>

            </div>
        </div>
    </div>

}

<div class="Blogs">
    <div class="container">
        <h2 class="text-center">Our Blogs</h2>
        <hr class="hr-category" />
        <div class="row">
            @{int DivMaxAmount3 = 3;}
            @foreach (var item in Model.Item4.Take(DivMaxAmount3))
            {
                <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                    <div class="card">
                        <div>
                            <img class="card-img img-responsive" src="~/Testphoto/@item.BlogImage" alt="Bologna" />
                        </div>

                        <div class="card-img-overlay">
                            <a href="#" class="btn btn-success btn-sm btn-blog">Article</a>
                        </div>

                        <div class="card-body">
                            <h4 class="card-title">@item.BlogTittle</h4>
                            
                            <p class="card-text">@item.BlogArticle</p>
                            <a href="@Url.Action("ArticleDetails", "Articles",new { articleId = item.id})" class="btn btn-info btn-cardblog">Read More <i class="fa fa-chevron-circle-right"></i></a>
                        </div>
                        
                        <div class="card-footer text-muted d-flex justify-content-between bg-transparent border-top-0">

                            <div class="publisherBy ">
                                <h5><span style="font-weight: bold; color: #33305c; margin-right: 5px;">Posted on </span><span>@item.ReturnDate.ToString("MM/dd/yyyy")</span>  <span style="margin-left:10px">by</span> <img src="~/img/login.jpg" alt="error" class="img-fluid" style="width: 50px; height: 35px; border-radius: 50%; margin-left: 10px;; margin-right: 10px;"><span style="font-weight: bold; color: #33305c">@item.User.UserName</span>  </h5>
                            </div>
                            

                        </div>
                    </div>
                </div>
            }

        </div>
       
    </div>
</div>

<div class="Testimonial">
    <div class="container">
        <div class="col-md-12">
            <div id="CourselExampleIndicators" class="carousel slide" data-ride="carousel">


                <h2 class="text-center">Our Clients Testimonial</h2>
                <hr class="hr-category" />
                <div class="carousel-inner">

                    <div class="item active">

                        <div class="row">
                            @{int DivMaxAmount0 = 3;}
                            @foreach (var item in Model.Item2.OrderBy(a => a.id).Take(DivMaxAmount0))
                            {
                                if (item != null)
                                {
                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area">
                                                <img src="~/Testphoto/@item.image" class="img-responsive img-tst " />
                                            </div>
                                            <div class="img-text">
                                                <h2>@item.User.UserName</h2>
                                                <hr class="hr-category" />
                                                <p>
                                                    <i class="fa fa-quote-left pr-2"></i>
                                                    @item.message
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <div class="item ">
                        <div class="row">
                            @foreach (var item in Model.Item2.Skip(3))
                            {
                                if (item != null)
                                {
                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area">
                                                <img src="~/Testphoto/@item.image" class="img-responsive img-tst " />
