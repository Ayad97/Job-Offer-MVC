@model IEnumerable<ASP_IDENTITY.Models.Category>

@{
    ViewBag.Title = "AllViewData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/RegisterStyle.css" rel="stylesheet">
<section style="margin-top:60px;">
    
        @foreach (var item in Model)
        {
            <div class="category ">
                <h2>@Html.DisplayFor(ModelItem => item.CategoryName)</h2><hr class="hr-category" />

                <h4>@Html.DisplayFor(ModelItem => item.CategoryDescription)</h4>


                <div class="row">
                    <div class="container">

                        @foreach (var subItem in item.jobs)
                        {
                            if (item.jobs != null)
                            {

                                <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-6  col-lg-3 cat_dt">
                                    <div class="item-cat">
                                        <div>
                                            <img src="~/Uploads/@subItem.JobImage" class="img-responsive img_category thumbnail" />

                                        </div>
                                        <div style="height:160px">
                                            <h5> <span>Job Tittle :</span> @Html.DisplayFor(ModelItem => subItem.JobTittle)</h5>
                                            <h5> <span>Serch For :</span> @Html.DisplayFor(ModelItem => subItem.JobContent)</h5>
                                            <h5> <span>Job Publisher :</span> @Html.DisplayFor(ModelItem => subItem.User.UserName)</h5>
                                            <a href="@Url.Action("Details", "Home", new { jobId = subItem.id })" class="btn btn-danger btn-category">Details</a>
                                        </div>
                                    </div>
                                </div>

                            }

                        }


                    </div>
                </div>
            </div>

        }
    
</section>